<% content_for :page_title do %>
  <%= @auction.name %>
<% end %>

<div class="p-6 bg-white">
  <div class="md:grid grid-cols-2 gap-4">
    <div>
      <%= render "gallery" %>

      <h3 class="uppercase text-gray-600 mb-4">
        Description
      </h3>

      <p class="leading-loose text-sm">
        <%= @auction.description %>
      </p>
    </div>

    <div>
      <h1 class="text-2xl mb-3 font-semibold uppercase text-gray-600">
        <%= @auction.name %>
      </h1>

      <%= render "countdown" %>

      <div class="flex flex-col border border-yellow-100 bg-yellow-50 p-8 xrounded-sm xshadow-inner mt-4">
        <%= render "bids/current_bid" %>

        <%= render "bids/no_bids" %>

        <%= render 'bids/form' %>
      </div>
    </div>
  </div>