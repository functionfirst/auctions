<% content_for :page_title do %>
  <%= @auction.name %>
<% end %>

<div class="bg-white">
  <div class="md:grid grid-cols-2 gap-4">
    <%= render "gallery" %>

    <div class="flex items-center justify-between -mt-10 px-6 h-20 bg-white mx-4 relative shadow-lg z-10 rounded-xl">
      <%= render "bids/current_bid" %>
      <%= render "countdown" %>
    </div>

    <div class="p-5">
      <h1 class="text-2xl mb-3 font-semibold text-indigo-900">
        <%= @auction.name %>
      </h1>

      <p class="leading-loose truncate text-gray-600">
        <%= @auction.description %>
      </p>

      <a href="#" class="text-yellow-700">More info</a>
    </div>

    <%= render "bids/bids" %>

    <%= render 'bids/form' %>
  </div>