<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:html_title) ? yield(:html_title) : 'Auction' %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="antialiased font-sans bg-gray-50 flex flex-col h-screen">
    <%= render "shared/flash" unless flash.empty? %>

    <%= render "shared/navigation" %>

    <main class="max-w-7xl mx-auto overflow-auto flex-1 will-change-transform">
      <%= yield %>
    </main>

    <div class="transition text-center transform translate-y-0  md:translate-y-full flex justify-center p-1 gap-5 border-t border-gray-200 bg-gray-50 text-gray-800 text-sm">
      <%= link_to(auctions_path, class: 'p-1 focus:outline-none focus:bg-gray-300 rounded-md') do %>
        <span class="block mx-auto h-7 w-7">
          <%= show_svg('shopping-bag.svg') %>
        </span>

        Auctions
      <% end %>

      <%= link_to(auctions_path, class: 'p-1 focus:outline-none focus:bg-gray-300 rounded-md') do %>
        <span class="block mx-auto h-7 w-7">
          <%= show_svg('heart.svg') %>
        </span>

        Watchlist
      <% end %>

      <%= link_to(auctions_path, class: 'p-1 focus:outline-none focus:bg-gray-300 rounded-md') do %>
        <span class="block mx-auto h-7 w-7">
          <%= show_svg('search.svg') %>
        </span>

        Search
      <% end %>

      <!-- use client-side to hide this url -->
      <%= link_to(edit_user_registration_path, class: 'p-1 focus:outline-none focus:bg-gray-300 rounded-md') do %>
          <span class="block mx-auto h-7 w-7">
            <%= show_svg('user.svg') %>
          </span>

          Profile
        <% end %>
    </div>
  </body>
</html>
